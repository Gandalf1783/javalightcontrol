    <patternset id="excluded.from.module.javalightcontrol">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.javalightcontrol">
        <patternset refid="excluded.from.module.javalightcontrol"/>
    </patternset>

    <path id="javalightcontrol.module.sourcepath">
        <dirset dir="${module.javalightcontrol.basedir}">
            <include name="src/main/java"/>
            <include name="src/main/resources"/>
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.javalightcontrol"
            depends="compile.module.javalightcontrol.production,compile.module.javalightcontrol.tests"
            description="Compile module javalightcontrol"/>

    <target name="compile.module.javalightcontrol.production" depends="register.custom.compilers"
            description="Compile module javalightcontrol; production classes">
        <mkdir dir="${javalightcontrol.output.dir}"/>
        <javac2 destdir="${javalightcontrol.output.dir}" debug="${compiler.debug}"
                nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true"
                executable="${module.jdk.bin.javalightcontrol}/javac">
            <compilerarg line="${compiler.args.javalightcontrol}"/>
            <bootclasspath refid="javalightcontrol.module.bootclasspath"/>
            <classpath refid="javalightcontrol.module.production.classpath"/>
            <src refid="javalightcontrol.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.javalightcontrol"/>
        </javac2>

        <copy todir="${javalightcontrol.output.dir}">
            <fileset dir="${module.javalightcontrol.basedir}/src/main/java">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
            <fileset dir="${module.javalightcontrol.basedir}/src/main/resources">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
            <fileset dir="${module.javalightcontrol.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.javalightcontrol.tests"
            depends="register.custom.compilers,compile.module.javalightcontrol.production"
            description="compile module javalightcontrol; test classes" unless="skip.tests"/>

    <target name="clean.module.javalightcontrol" description="cleanup module">
        <delete dir="${javalightcontrol.output.dir}"/>
        <delete dir="${javalightcontrol.testoutput.dir}"/>
    </target>
