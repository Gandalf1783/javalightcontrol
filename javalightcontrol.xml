<?xml version="1.0" encoding="UTF-8"?>
<project name="javalightcontrol" default="all">


    <property file="javalightcontrol.properties"/>
    <!-- Uncomment the following property if no tests compilation is needed -->
    <!--
    <property name="skip.tests" value="true"/>
     -->

    <!-- Compiler options -->

    <property name="compiler.debug" value="on"/>
    <property name="compiler.generate.no.warnings" value="off"/>
    <property name="compiler.args" value=""/>
    <property name="compiler.max.memory" value="700m"/>
    <patternset id="ignored.files">
        <exclude name="**/*.hprof/**"/>
        <exclude name="**/*.pyc/**"/>
        <exclude name="**/*.pyo/**"/>
        <exclude name="**/*.rbc/**"/>
        <exclude name="**/*.yarb/**"/>
        <exclude name="**/*~/**"/>
        <exclude name="**/.DS_Store/**"/>
        <exclude name="**/.git/**"/>
        <exclude name="**/.hg/**"/>
        <exclude name="**/.svn/**"/>
        <exclude name="**/CVS/**"/>
        <exclude name="**/__pycache__/**"/>
        <exclude name="**/_svn/**"/>
        <exclude name="**/vssver.scc/**"/>
        <exclude name="**/vssver2.scc/**"/>
    </patternset>
    <patternset id="library.patterns">
        <include name="*.war"/>
        <include name="*.swc"/>
        <include name="*.zip"/>
        <include name="*.egg"/>
        <include name="*.ane"/>
        <include name="*.jar"/>
        <include name="*.ear"/>
        <include name="*.klib"/>
    </patternset>
    <patternset id="compiler.resources">
        <exclude name="**/?*.java"/>
        <exclude name="**/?*.form"/>
        <exclude name="**/?*.class"/>
        <exclude name="**/?*.groovy"/>
        <exclude name="**/?*.scala"/>
        <exclude name="**/?*.flex"/>
        <exclude name="**/?*.kt"/>
        <exclude name="**/?*.clj"/>
        <exclude name="**/?*.aj"/>
    </patternset>

    <!-- JDK definitions -->

    <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
    <path id="jdk.classpath.1.8">
        <fileset dir="${jdk.home.1.8}">
            <include name="jre/lib/charsets.jar"/>
            <include name="jre/lib/ext/access-bridge-64.jar"/>
            <include name="jre/lib/ext/cldrdata.jar"/>
            <include name="jre/lib/ext/dnsns.jar"/>
            <include name="jre/lib/ext/jaccess.jar"/>
            <include name="jre/lib/ext/localedata.jar"/>
            <include name="jre/lib/ext/nashorn.jar"/>
            <include name="jre/lib/ext/sunec.jar"/>
            <include name="jre/lib/ext/sunjce_provider.jar"/>
            <include name="jre/lib/ext/sunmscapi.jar"/>
            <include name="jre/lib/ext/sunpkcs11.jar"/>
            <include name="jre/lib/ext/zipfs.jar"/>
            <include name="jre/lib/jce.jar"/>
            <include name="jre/lib/jsse.jar"/>
            <include name="jre/lib/management-agent.jar"/>
            <include name="jre/lib/resources.jar"/>
            <include name="jre/lib/rt.jar"/>
        </fileset>
    </path>

    <property name="project.jdk.home" value="${jdk.home.1.8}"/>
    <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
    <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>


    <!-- Project Libraries -->

    <path id="library.maven:_asm:asm-commons:3.0.classpath">
        <pathelement location="${path.variable.maven_repository}/asm/asm-commons/3.0/asm-commons-3.0.jar"/>
    </path>

    <path id="library.maven:_asm:asm-tree:3.0.classpath">
        <pathelement location="${path.variable.maven_repository}/asm/asm-tree/3.0/asm-tree-3.0.jar"/>
    </path>

    <path id="library.maven:_asm:asm:3.0.classpath">
        <pathelement location="${path.variable.maven_repository}/asm/asm/3.0/asm-3.0.jar"/>
    </path>

    <path id="library.maven:_club.minnced:discord-rpc-release:v3.4.0.classpath">
        <pathelement
                location="${path.variable.maven_repository}/club/minnced/discord-rpc-release/v3.4.0/discord-rpc-release-v3.4.0.jar"/>
    </path>

    <path id="library.maven:_club.minnced:java-discord-rpc:2.0.2.classpath">
        <pathelement
                location="${path.variable.maven_repository}/club/minnced/java-discord-rpc/2.0.2/java-discord-rpc-2.0.2.jar"/>
    </path>

    <path id="library.maven:_com.esotericsoftware.kryo:kryo:2.24.0.classpath">
        <pathelement
                location="${path.variable.maven_repository}/com/esotericsoftware/kryo/kryo/2.24.0/kryo-2.24.0.jar"/>
    </path>

    <path id="library.maven:_com.esotericsoftware.minlog:minlog:1.2.classpath">
        <pathelement
                location="${path.variable.maven_repository}/com/esotericsoftware/minlog/minlog/1.2/minlog-1.2.jar"/>
    </path>

    <path id="library.maven:_com.esotericsoftware:jsonbeans:0.7.classpath">
        <pathelement location="${path.variable.maven_repository}/com/esotericsoftware/jsonbeans/0.7/jsonbeans-0.7.jar"/>
    </path>

    <path id="library.maven:_com.esotericsoftware:kryonet:2.22.0-rc1.classpath">
        <pathelement
                location="${path.variable.maven_repository}/com/esotericsoftware/kryonet/2.22.0-RC1/kryonet-2.22.0-RC1.jar"/>
    </path>

    <path id="library.maven:_com.github.cansik:artnet4j:17d0220.classpath">
        <pathelement
                location="${path.variable.maven_repository}/com/github/cansik/artnet4j/17d0220/artnet4j-17d0220.jar"/>
    </path>

    <path id="library.maven:_com.intellij:forms_rt:7.0.3.classpath">
        <pathelement location="${path.variable.maven_repository}/com/intellij/forms_rt/7.0.3/forms_rt-7.0.3.jar"/>
    </path>

    <path id="library.maven:_com.jgoodies:forms:1.1-preview.classpath">
        <pathelement location="${path.variable.maven_repository}/com/jgoodies/forms/1.1-preview/forms-1.1-preview.jar"/>
    </path>

    <path id="library.maven:_com.sun.xml.bind:jaxb-core:2.3.0.classpath">
        <pathelement location="${path.variable.maven_repository}/com/sun/xml/bind/jaxb-core/2.3.0/jaxb-core-2.3.0.jar"/>
    </path>

    <path id="library.maven:_com.sun.xml.bind:jaxb-impl:2.3.0.classpath">
        <pathelement location="${path.variable.maven_repository}/com/sun/xml/bind/jaxb-impl/2.3.0/jaxb-impl-2.3.0.jar"/>
    </path>

    <path id="library.maven:_javax.xml.bind:jaxb-api:2.3.0.classpath">
        <pathelement location="${path.variable.maven_repository}/javax/xml/bind/jaxb-api/2.3.0/jaxb-api-2.3.0.jar"/>
    </path>

    <path id="library.maven:_jdom:jdom:1.0.classpath">
        <pathelement location="${path.variable.maven_repository}/jdom/jdom/1.0/jdom-1.0.jar"/>
    </path>

    <path id="library.maven:_net.java.dev.jna:jna:5.5.0.classpath">
        <pathelement location="${path.variable.maven_repository}/net/java/dev/jna/jna/5.5.0/jna-5.5.0.jar"/>
    </path>

    <path id="library.maven:_org.objenesis:objenesis:2.1.classpath">
        <pathelement location="${path.variable.maven_repository}/org/objenesis/objenesis/2.1/objenesis-2.1.jar"/>
    </path>
    <!-- Register Custom Compiler Taskdefs -->
    <property name="javac2.home" value="${idea.home}/lib"/>
    <path id="javac2.classpath">
        <fileset dir="${javac2.home}">
            <include name="javac2.jar"/>
            <include name="jdom.jar"/>
            <include name="asm-all*.jar"/>
            <include name="forms-*.jar"/>
        </fileset>
    </path>
    <target name="register.custom.compilers">
        <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
        <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions"
                 classpathref="javac2.classpath"/>
    </target>

    <!-- Modules -->

    <import file="${basedir}/module_javalightcontrol.xml"/>

    <target name="init" description="Build initialization">
        <!-- Perform any build initialization in this target -->
    </target>

    <target name="clean" depends="clean.module.javalightcontrol" description="cleanup all"/>

    <target name="build.modules" depends="init, clean, compile.module.javalightcontrol"
            description="build all modules"/>

    <target name="init.artifacts">
        <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
        <property name="artifact.output.javalightcontrol:jar" value="${basedir}/out/artifacts/javalightcontrol_jar"/>
        <mkdir dir="${artifacts.temp.dir}"/>
        <property name="temp.jar.path.javalightcontrol.jar" value="${artifacts.temp.dir}/javalightcontrol.jar"/>
    </target>

    <target name="artifact.javalightcontrol:jar" depends="init.artifacts, compile.module.javalightcontrol"
            description="Build &#39;javalightcontrol:jar&#39; artifact">
        <property name="artifact.temp.output.javalightcontrol:jar" value="${artifacts.temp.dir}/javalightcontrol_jar"/>
        <mkdir dir="${artifact.temp.output.javalightcontrol:jar}"/>
        <jar destfile="${temp.jar.path.javalightcontrol.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
            <zipfileset dir="${javalightcontrol.output.dir}"/>
            <zipfileset src="${path.variable.maven_repository}/com/esotericsoftware/jsonbeans/0.7/jsonbeans-0.7.jar"/>
            <zipfileset src="${path.variable.maven_repository}/asm/asm-commons/3.0/asm-commons-3.0.jar"/>
            <zipfileset
                    src="${path.variable.maven_repository}/club/minnced/java-discord-rpc/2.0.2/java-discord-rpc-2.0.2.jar"/>
            <zipfileset src="${path.variable.maven_repository}/javax/xml/bind/jaxb-api/2.3.0/jaxb-api-2.3.0.jar"/>
            <zipfileset
                    src="${path.variable.maven_repository}/com/github/cansik/artnet4j/17d0220/artnet4j-17d0220.jar"/>
            <zipfileset src="${path.variable.maven_repository}/net/java/dev/jna/jna/5.5.0/jna-5.5.0.jar"/>
            <zipfileset
                    src="${path.variable.maven_repository}/com/esotericsoftware/kryonet/2.22.0-RC1/kryonet-2.22.0-RC1.jar"/>
            <zipfileset
                    src="${path.variable.maven_repository}/club/minnced/discord-rpc-release/v3.4.0/discord-rpc-release-v3.4.0.jar"/>
            <zipfileset src="${path.variable.maven_repository}/com/intellij/forms_rt/7.0.3/forms_rt-7.0.3.jar"/>
            <zipfileset src="${path.variable.maven_repository}/com/sun/xml/bind/jaxb-core/2.3.0/jaxb-core-2.3.0.jar"/>
            <zipfileset src="${path.variable.maven_repository}/com/esotericsoftware/minlog/minlog/1.2/minlog-1.2.jar"/>
            <zipfileset src="${path.variable.maven_repository}/org/objenesis/objenesis/2.1/objenesis-2.1.jar"/>
            <zipfileset src="${path.variable.maven_repository}/asm/asm-tree/3.0/asm-tree-3.0.jar"/>
            <zipfileset src="${path.variable.maven_repository}/com/jgoodies/forms/1.1-preview/forms-1.1-preview.jar"/>
            <zipfileset src="${path.variable.maven_repository}/com/esotericsoftware/kryo/kryo/2.24.0/kryo-2.24.0.jar"/>
            <zipfileset src="${path.variable.maven_repository}/jdom/jdom/1.0/jdom-1.0.jar"/>
            <zipfileset src="${path.variable.maven_repository}/com/sun/xml/bind/jaxb-impl/2.3.0/jaxb-impl-2.3.0.jar"/>
            <zipfileset src="${path.variable.maven_repository}/asm/asm/3.0/asm-3.0.jar"/>
            <zipfileset dir="${basedir}/src/main/resources"/>
        </jar>
        <copy file="${temp.jar.path.javalightcontrol.jar}"
              tofile="${artifact.temp.output.javalightcontrol:jar}/javalightcontrol.jar"/>
    </target>

    <target name="build.all.artifacts" depends="artifact.javalightcontrol:jar" description="Build all artifacts">
        <mkdir dir="${artifact.output.javalightcontrol:jar}"/>
        <copy todir="${artifact.output.javalightcontrol:jar}">
            <fileset dir="${artifact.temp.output.javalightcontrol:jar}"/>
        </copy>

        <!-- Delete temporary files -->
        <delete dir="${artifacts.temp.dir}"/>
    </target>

    <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>